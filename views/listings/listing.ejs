<% layout("/layouts/boilerplate") %>
<body>
    <h4>All Listings</h4>
    <!-- <form method="get" action="/listings/new" >
        <button>Create new List</button>
    </form><br><br> -->
   <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
    <% for(let list of listings) { %>
      <a href="/listings/<%=list._id%>" class="listing-link">
    <div class="card col" style="width: 20rem;">
        <img src="<%= list.imageurl.url %>" class="card-img-top" alt="image Not available" style="height: 20rem;">
        <div class="card-body">
          <p class="card-text">
          <b>  <%= list.title %></b>
        <br>
        &#8377 <%= list.price %>/night
        </p>
        </div>
      </div>
    </a>
      <% } %></div>
    
    
       

  
</body>
