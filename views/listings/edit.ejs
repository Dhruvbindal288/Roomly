<% layout("/layouts/boilerplate") %>
<body>
    <h4>Edit list</h4>
    <form method="post" action="/listings/<%= listing._id%>?_method=PUT">
<div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" name="title" value="<%=listing.title%>" class="form-control"><br>
</div>
<div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea type="text" name="description" class="form-control"><%=listing.description%></textarea><br>    
</div>

<div class="mb-3">
    <label for="imageurl" class="form-label">ImageUrl</label>
    <input type="text" name="imageurl" value="<%=listing.imageurl%>" class="form-control"><br>
</div>
<div class="mb-3">
    <label for="price" class="form-label">Price</label>
    <input type="number" name="price" value="<%=listing.price%>" class="form-control"><br>
</div>
<div class="mb-3">
    <label for="imageurl" class="form-label">Country</label>
    <input type="text" name="country" value="<%=listing.country%>" class="form-control"><br></div>


<button class="btn btn-dark">Edit</button>
  
</form>
</body>
